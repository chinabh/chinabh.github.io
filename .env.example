# FORM SUBMISSION CONFIGURATION
# Copy this file to .env and set your actual values

# Email address where form submissions will be sent
# For FormSubmit.co: just the email address
# For custom endpoint: full URL to your API
DEFAULT_RECEPTION_EMAIL=your-email@chinabusinesshub.com

# Form service type: 'formsubmit' or 'custom'
# formsubmit: Uses FormSubmit.co service (may be blocked in China)
# custom: Uses custom URL (full URL should be in DEFAULT_RECEPTION_EMAIL)
FORM_SERVICE_TYPE=formsubmit

# DEPLOYMENT NOTE:
# For Cloudflare Pages, set these as Environment Variables in dashboard:
# Settings → Environment Variables → Add variable
IN_PRODUCTION=true