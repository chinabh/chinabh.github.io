{
  "name": "china-bh-static-site",
  "version": "1.0.0",
  "description": "Static landing page for China Business Hub (China deployment)",
  "type": "module",
  "scripts": {
    "build": "node src/generator.js",
    "build:local": "node -r dotenv/config src/generator.js dotenv_config_path=.env.local",
    "preview": "npx http-server dist -p 8080 -o -c-1",
    "dev": "npm run build:local && npm run preview",
    "validate": "node scripts/validate-content.js",
    "optimize-images": "node scripts/optimize-images.js"
  },
  "keywords": [
    "static-site",
    "china",
    "landing-page"
  ],
  "author": "China Business Hub",
  "license": "MIT",
  "devDependencies": {
    "dotenv": "^17.2.3",
    "http-server": "^14.1.1"
  }
}
